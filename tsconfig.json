{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "experimentalDecorators": true,
        "noErrorTruncation": true,
        "baseUrl": ".",
        // "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": ".",
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "*.js"
    ]
}