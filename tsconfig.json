{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "experimentalDecorators": true,
        "noErrorTruncation": true,
        "baseUrl": ".",
        // "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "dist"
    },
    "include": [
        "lib/**/*",
        "utils/**/*"
    ],
    "exclude": []
}